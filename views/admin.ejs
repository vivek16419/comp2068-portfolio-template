<% include partials/header %>
    <style scoped>
        table {
            margin: 0 auto;
        }

        h1 {
            text-align: center
        }
    </style>

    <h1>
        <%= title %>
    </h1>

    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
        <thead>
            <tr>
                <th>Title</th>
                <th>Publisher</th>
                <th>Year</th>
                <th>imageUrl</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < games.length; i++ ) { %>
                <tr>
                    <td>
                        <%= games[i].title %>
                    </td>
                    <td>
                        <%= games[i].publisher %>
                    </td>
                    <td>
                        <%= games[i].year %>
                    </td>
                    <td>
                        <%= games[i].imageUrl %>
                    </td>
                    <td>
                        <a href="#">Edit</a>
                    </td>
                    <td>
                        <a href="#">Delete</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>

    <% include partials/footer %>